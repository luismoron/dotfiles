# Paleta de Colores para i3 (basada en el wallpaper "Cachy depths 5K.jpg" de CachyOS)

# Definiciones de Color (extraídas de la imagen)
set $cachy_dark_bg           #1A2F2F   
# Fondo Oscuro Profundo (dominante)
set $cachy_mid_shadow        #274242   
# Sombra Media / Degradado Oscuro
set $cachy_accent_bright     #2FE6CB   
# Verde Azulado Brillante (acento principal del logo)
set $cachy_accent_detail     #1D9B87   
# Verde Azulado Intermedio (detalle del logo)
set $cachy_highlight_light   #C6F9FC   
# Punto de Luz / Brillo Blanco Azulado (highlight sutil)

# Colores Adicionales para Consistencia (usando la misma gama)
set $cachy_text_light        #C6F9FC   
# Texto claro, usando el brillo del logo para legibilidad
set $cachy_text_dark         #1A2F2F   
# Texto oscuro si fuera necesario, usando el fondo profundo
set $cachy_border_active     #2FE6CB   
# Borde de ventana activa (el mismo acento brillante)
set $cachy_border_inactive   #274242   
# Borde de ventana inactiva (sombra media para menos distracción)
set $cachy_urgent_red        #FF5555   
# Un rojo estándar para notificaciones urgentes (contraste)

###########################
##  Styles i3Status Bar  ##
###########################


bar {
    # Puedes ajustar la posición a 'top' o 'bottom'
    # Fuente de la barra
    font xft:Roboto 11
    # Puedes ajustar el tamaño o la fuente
    position bottom
    tray_output eDP
    status_command i3status -c $HOME/Plantillas/dotfiles/i3status/i3status.conf | $HOME/Plantillas/dotfiles/i3status/i3spotifystatus/pystatus.py
    


    # Colores de la barra
    colors {
        # Fondo de la barra y color del texto general (statusline)
        background $cachy_dark_bg
        statusline $cachy_text_light

        # Colores para los espacios de trabajo (workspaces)
        # focused_workspace: Cuando el espacio de trabajo está activo y en foco
        # active_workspace: Cuando el espacio de trabajo tiene ventanas pero no está en foco
        # inactive_workspace: Cuando el espacio de trabajo no tiene ventanas ni está en foco
        # urgent_workspace: Cuando el espacio de trabajo tiene una notificación urgente
        # binding_mode: Cuando estás en un modo de enlace (ej. resize mode)

        # Formato: <background> <border> <text>

        # Espacio de trabajo enfocado: Fondo acento brillante, borde acento brillante, texto claro
        focused_workspace    $cachy_accent_bright $cachy_accent_bright $cachy_dark_bg

        # Espacio de trabajo activo (pero no enfocado): Fondo oscuro, borde oscuro, texto de acento
        active_workspace     $cachy_dark_bg $cachy_dark_bg $cachy_accent_detail

        # Espacio de trabajo inactivo: Fondo oscuro, borde oscuro, texto de sombra media
        inactive_workspace   $cachy_dark_bg $cachy_dark_bg $cachy_mid_shadow

        # Espacio de trabajo urgente: Rojo para alerta
        urgent_workspace     $cachy_urgent_red $cachy_urgent_red $cachy_text_light

        # Modo de enlace: Puede ser rojo o el acento brillante
        binding_mode         $cachy_accent_bright $cachy_accent_bright $cachy_dark_bg
    }
}

# -----------------------------------------------------------------------------
# Configuración de los bordes de las ventanas
# -----------------------------------------------------------------------------

# client.focused: El borde de la ventana que tiene el foco
# Formato: <border> <background> <text> <indicator>
client.focused          $cachy_border_active $cachy_mid_shadow $cachy_text_light $cachy_border_active

# client.focused_inactive: El borde de una ventana que no tiene foco pero pertenece al espacio de trabajo activo
client.focused_inactive $cachy_border_inactive $cachy_dark_bg $cachy_mid_shadow $cachy_border_inactive

# client.unfocused: El borde de una ventana en otro espacio de trabajo o que no está en foco
client.unfocused        $cachy_mid_shadow $cachy_dark_bg $cachy_mid_shadow $cachy_mid_shadow

# client.urgent: El borde de una ventana que tiene una notificación urgente
client.urgent           $cachy_urgent_red $cachy_dark_bg $cachy_text_light $cachy_urgent_red

# client.placeholder: El borde de un placeholder (ej. cuando hay un espacio vacío en un contenedor)
client.placeholder      $cachy_dark_bg $cachy_dark_bg $cachy_mid_shadow $cachy_dark_bg

# client.background: El color de fondo para las ventanas que no son transparentes
# Puedes configurarlo a tu gusto, a menudo es mejor que lo manejen las aplicaciones o un compositor.
# client.background       $cachy_dark_bg

